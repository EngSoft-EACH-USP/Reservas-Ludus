<p id="notice"><%= notice %></p>

<h1>Reservas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Pessoas</th>
      <th>Data</th>
      <th>Hora</th>
      <th>Pne</th>
      <th>Obs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservas.each do |reserva| %>
      <tr>
        <td><%= reserva.nome %></td>
        <td><%= reserva.email %></td>
        <td><%= reserva.telefone %></td>
        <td><%= reserva.pessoas %></td>
        <td><%= reserva.data %></td>
        <td><%= reserva.hora %></td>
        <td><%= reserva.pne %></td>
        <td><%= reserva.obs %></td>
        <td><%= link_to 'Show', reserva %></td>
        <td><%= link_to 'Edit', edit_reserva_path(reserva) %></td>
        <td><%= link_to 'Destroy', reserva, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

